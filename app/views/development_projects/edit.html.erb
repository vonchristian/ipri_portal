<div data-controller="development-project-form" class="col-span-9 bg-white py-10">
    <%= simple_form_for @development_project, url: :development_project do |f| %>
    <div class="max-w-7xl mx-auto lg:px-0">
      <h2 class="font-bold text-xl text-gray-900">Details of Development Project</h2>
      <div class="border-t border-gray-200 mt-4"></div>
        <div class="px-4 py-5  space-y-4 sm:p-6">
        <%= f.input :development_project_category_id, label: "Type of Development Project", collection: DevelopmentProjects::Category.all.map{|a| [a.name, a.id] } %>
        <%= f.input :name, label: "Name of development project" %>
        <%= f.input :description, label: "Description of development project", as: :text, input_html: { rows: 10 } %>
        <%= f.input :project_start_year, label: "Indicate year of project's start of operation on the country where the incident of human rights violation happened" %>
        <%= f.input :website_sources, label: "Website Sources", as: :text %>

        <div class="border-t border-gray-200 mt-4"></div>
          <%= f.submit "Update Project", class: 'float-right class="w-full h-12 px-6 text-white transition-colors duration-150 bg-green-700 rounded-lg focus:shadow-outline hover:bg-green-800 mt-4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
