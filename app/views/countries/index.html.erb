 <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="mt-2 min-w-full">
          <thead class="border-b bg-gray-50">
            <tr>
              <th scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                Country
              </th>
              <th scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                Total Cases
              </th>
              <th scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                Killings
              </th>
              <th scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                Criminalizations
              </th>
              <th scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                Other Violations
              </th>
            </tr>
          </thead>
          <tbody>
<% @countries.each do |country| %>
  <tr class="border-b">
    <td scope="row" class="py-4 px-6 font-medium whitespace-nowrap">
      <span class="<%= 'fa fa-flag text-blue-600' if country.priority %>"></span> <%= link_to country.name, country_path(country) %>
    </td>
    <td scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
      <%= country.case_count %>
    </td>
    <td scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
      <%= country.killings_count %>
    </td>
    <td scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
      <%= country.criminalizations_count %>
    </td>
    <td scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
      <%= country.other_violations_count %>
    </td>
<% end %>
</tbody>
</table>
 <div class="mt-5">
          <%== pagy_nav(@pagy) %>
        </div>
