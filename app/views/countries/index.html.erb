<div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">

      <div class="overflow-hidden">
        <%= form_tag countries_path, method: :get do %>
        <div class="relative">
          <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
              <svg aria-hidden="true" class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          </div>
          <%= text_field_tag :search, params[:search], class: "block p-4 pl-10 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-green-700 focus:border-green-500", placeholder: "Search country name", type: "search" %>
            <button type="submit" class="text-white absolute right-2.5 bottom-2.5 bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-800 font-medium rounded-lg text-sm px-4 py-2">Search</button>
        </div>
      <% end %>
        <table class="mt-2 min-w-full">
          <thead class="border-b bg-gray-50">
            <tr>
              <th id="country-name" scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                <%= sort_link(column: "name", label: "Country") %>
              </th>
              <th id="country-case-details-count" scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                <%= sort_link(column: "case_details_count", label: "Total Cases") %>
              </th>
              <th id="country-killings-count" scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                <%= sort_link(column: "killings_count", label: "Killings") %>
              </th>
              <th id="country-criminalizations-count" scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                <%= sort_link(column: "criminalizations_count", label: "Criminalizations") %>
              </th>
              <th id="country-human-rights-violations-count" scope="col" class="text-sm font-bold text-gray-900 px-6 py-4 text-left">
                <%= sort_link(column: "human_rights_violations_count", label: "Other Violations") %>
              </th>
            </tr>
          </thead>
          <tbody>
<% @countries.each do |country| %>
  <tr class="border-b">
    <td scope="row" class="py-4 px-6 font-medium whitespace-nowrap">
      <span class="<%= 'fa fa-flag text-blue-600' if country.priority %>"></span> <%= link_to country.name, country_path(country) %>
    </td>
    <td scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
      <%= country.case_details_count %>
    </td>
    <td scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
      <%= country.killings_count %>
    </td>
    <td scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
      <%= country.criminalizations_count %>
    </td>
    <td scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
      <%= country.human_rights_violations_count %>
    </td>
<% end %>
</tbody>
</table>
 <div class="mt-5">
          <%== pagy_nav(@pagy) %>
        </div>
