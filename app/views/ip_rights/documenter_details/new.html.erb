<div class="grid grid-cols-12 min-h-screen">
  <div class="col-span-3 bg-green-600">
    <h1 class="pt-10 pl-4 font-bold py-5"> Step 1/7:</h1>
    <h3 class="font-bold pl-8"><i class="fa fa-circle fa-2x"></i> <span class="align-middle pl-4 pb-2">Documenter Details</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Data Sharing Agreement</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Incident Details</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Victims</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Human Rights Violoations</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Actions Taken</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Related Development Projects</span></h3>
  </div>
<div data-controller="documenter-form" class="col-span-9 bg-white py-10 px-5">
  <%= simple_form_for @documenter, url: :ip_rights_documenter_details, html: { multipart: true } do |f| %>
    <div class="bg-gray-50 mb-10">
      <div class="max-w-7xl mx-auto lg:px-0">
        <div class="md:grid md:grid-cols-3">

          <div class="md:mt-0 md:col-span-6 bg-white py-10 px-5">
            <h2 class="font-bold text-xl text-gray-900">Details of Documenter</h2>
            <div class="border-t border-gray-200 mt-4"></div>
            <div>
              <div class="px-4 py-5  space-y-4 sm:p-6">
                <div class="grid grid-cols-4 gap-6">
                  <div class="col-span-2 sm:col-span-2">
                    <label for="first-name" class="block text-sm font-medium text-gray-700">First name</label>
                    <%= f.input :first_name, label: false, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                  <div class="col-span-2 sm:col-span-2">
                    <label for="last-name" class="block text-sm font-medium text-gray-700">Last name</label>
                    <%= f.input :last_name, label: false, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                </div>

                <label for="first-name" class="block text-sm font-medium text-gray-700">Organization/Affiliation</label>
                <%= f.input :organization_name, label: false, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                <p class="text-sm text-gray-500">
                  Write the full name of your Organization / Affiliation
                </p>
                <div>
                  <label for="submission-date" class="block text-sm font-medium text-gray-700 pb-2">Date of Submission</label>
                  <div class="grid grid-cols-3 gap-4">
                    <%= f.input :submission_date_month, label: false, collection: Date::MONTHNAMES, selected: Date.current.strftime("%B")  %>
                    <%= f.input :submission_date_day, label: false, collection: 1..(Date.current.all_month.count), selected: Date.current.day %>
                    <%= f.input :submission_date_year, label: false, collection: (Date.current - 10.year).year..(Time.zone.now.year), selected: Date.current.year %>
                  </div>
                </div>
                <fieldset>
                  <legend class="text-base font-medium text-gray-900 pb-4">Contact Details</legend>
                    <div class="col-span-6 sm:col-span-3 pb-5" data-documenter-form-target="emailField">
                      <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                      <%= f.input :email, label: false, id: "documenter-email", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>

                    </div>

                    <div class="flex items-start">
                      <div class="flex items-center h-5">
                        <input type="checkbox"
                        class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded"
                        data-action="documenter-form#togglePhoneGroup">
                      </div>
                      <div class="ml-3 text-sm">
                        <label for="candidates" class="font-medium text-gray-700">Phone Number</label>
                        <p class="text-gray-500">Get notified through your phone number.</p>
                      </div>
                    </div>
                </fieldset>
                <div class="col-span-6 sm:col-span-3 hidden" data-documenter-form-target="phoneFieldGroup">
                  <label for="first-name" class="block text-sm font-medium text-gray-700">Phone Number</label>
                  <%= f.text_field :phone_number, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", data: { documenter_form_target: "phone" } %>
                </div>
                <fieldset>
                  <div>
                    <legend class="text-base font-medium text-gray-700 pt-4">Is the documenter submitting this case factsheet as primary data?</legend>
                    <p class="text-gray-500"> Primary data refers to data that are gathered directly from the victim/s, family/ies of the victim/s, member/s of the Indigenous Peoples that were affected.</p>
                  </div>
                  <div class="mt-4 space-y-4">
                    <div class="flex items-center" data-documenter-form-target="primaryData">
                      <%= f.input :primary_data, collection: [['0', 'No'], ['1', 'Yes']], label_method: :second, value_method: :first, selected: "1", input_html: { data: { action: "documenter-form#toggleDataSource" } }  %>

                  </div>
                </fieldset>

                <div class="hidden" data-documenter-form-target="dataSourceGroup">
                  <label for="about" class="block text-sm font-medium text-gray-700">
                    Other relevant websites/links
                  </label>
                  <div class="mt-1">
                    <%= f.input :data_sources, label: false, as: :text,  input_html: { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" } %>
                  </div>
                </div>
                <div class="hidden" data-documenter-form-target="dataSourceGroup">
                  <label class="block text-sm font-medium text-gray-700">
                    Upload Documents
                  </label>
                  <div class="mt-1 flex justify-center px-6 pt-5 border-2 border-gray-300 border-dashed rounded-md pb-5">
                    <div class="space-y-1 text-center">
                      <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                      </svg>
                      <div class="flex text-sm text-gray-600">
                        <label for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                          <span>Upload a file</span>
                          <%= f.input :documents, label: false, input_html: { multiple: true }, as: :file %>
                        </label>
                      </div>
                      <p class="text-xs text-gray-500">
                        PDF, PNG, JPG, GIF up to 10MB
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="px-4 py-3 bg-gray-100 text-right sm:px-6">
                <%= f.submit "Next", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
              </div>
            </div>
          </div>
        </div>
  <% end %>
</div>