
<div class="grid grid-cols-12 min-h-screen">
  <div class="col-span-3 bg-green-700">
    <h1 class="pt-10 pl-4 font-bold py-5 px-10"> Step 3/7:</h1>
    <h3 class="font-bold pl-8"><i class="fa fa-circle fa-2x"></i> <span class="align-middle pl-4 pb-2">Documenter Details</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle fa-2x"></i> <span class="align-middle pl-4 pb-2">Data Sharing Agreement</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle fa-2x"></i> <span class="align-middle pl-4 pb-2">Incident Details</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Victims</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Human Rights Violoations</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Actions Taken</span></h3>
    <h3 class="font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Development Projects</span></h3>
  </div>
  <div data-controller="incident-form" class="col-span-9 bg-white py-10 px-5">
    <%= simple_form_for @incident_detail, url: :ip_rights_case_detail_incident_details do |f| %>
      <h2 class="font-bold text-xl text-gray-900">Place and Date of Incident </h2>
      <div class="md:mt-0 md:col-span-2 bg-white px-4">

          <div class="border-t border-gray-200 mt-4"></div>
          <div>
            <div class="px-4 py-5 sm:p-6">
              <div class="grid grid-cols-4 gap-6">
                <div class="col-span-2 sm:col-span-2">
                 <%= f.input :country_id, label: "Country of Incident", collection: Country.all.map{|country| [country.name, country.id] } %>
                </div>
              </div>
              <div class="col-span-6 sm:col-span-3">
                <%= f.input :subnational_location, label: "Subnational Location", as: :text, hint: "(Specify what state, department, county, province etc.)" %>
              </div>
              <div class="col-span-6 sm:col-span-3">
                <%= f.input :location_details_1, label: "Other Location Details (1)", as: :text, hint: "(Specify what city or municipality)" %>
              </div>
              <div class="col-span-6 sm:col-span-3">
                <label for="first-name" class="block text-sm font-bold text-gray-700 pb-2"></label>
                <%= f.input :location_details_2, label: "Other Location Details (2)", as: :text, hint: "(Specify what town, village, etc.)" %>
              </div>
              <fieldset>
                <div>
                  <legend class="text-base font-medium text-gray-700 pt-4">Is this an ongoing case?</legend>
                </div>
                <div class="mt-4 space-y-4">
                 <%= f.input :ongoing_case, label: false, collection: [['0', 'No'], ['1', 'Yes']], label_method: :second, value_method: :first, selected: "1", input_html: { data: { action: "incident-form#toggleOngoingCase" } }  %>


                  </div>
                </div>
              </fieldset>

                <label class="block text-sm font-bold text-gray-700 pb-2">Start Date of Incident</label>
                  <div class="grid grid-cols-3 gap-4">
                    <%= f.input :incident_start_month, label: false, collection: Date::MONTHNAMES, selected: Date.current.strftime("%B")  %>
                    <%= f.input :incident_start_day, label: false, collection: 1..(Date.current.all_month.count), selected: Date.current.day %>
                    <%= f.input :incident_start_year, label: false, collection: (Date.current - 10.year).year..(Time.zone.now.year), selected: Date.current.year %>
                  </div>

              <div class="hidden" data-incident-form-target="ongoingCaseGroup">
                <label class="block text-sm font-bold text-gray-700 pb-2">End Date of Incident</label>
                 <div class="grid grid-cols-3 gap-4">
                    <%= f.input :incident_end_month, label: false, collection: Date::MONTHNAMES, selected: Date.current.strftime("%B")  %>
                    <%= f.input :incident_end_day, label: false, collection: 1..(Date.current.all_month.count), selected: Date.current.day %>
                    <%= f.input :incident_end_year, label: false, collection: (Date.current - 10.year).year..(Time.zone.now.year), selected: Date.current.year %>
                  </div>
              </div>

              <div class="col-span-8">
                <label for="first-name" class="block text-sm font-medium text-gray-700 pb-2">Time of Incident </label>
                <%= f.select :incident_hour,  1..24 %>
                <%= f.select :incident_minute,  1..59 %>

              </div>

      <div class="px-4 py-3 bg-gray-100 text-right sm:px-6">
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
          Next
        </button>
      </div>
    <% end %>
  </div>
</div>
