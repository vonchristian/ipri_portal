<div class="max-w-7xl mx-auto px-10 mt-5 mb-5 py-10 bg-white shadow border-t-4 border-stone-200 space-y-10">
<div data-controller="development-project-form" class="col-span-9 bg-white">
  <%= simple_form_for @development_project, url: :documenters_case_detail_development_project do |f| %>
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="font-bold text-xl text-gray-900 mb-4">Details of Development Project</h2>
      <div class="border-t border-gray-200 mb-6"></div>

      <div class="space-y-6">
        <%= f.input :development_project_category_id,
                    label: "Type of Development Project",
                    collection: DevelopmentProjects::Category.all.map { |a| [a.name, a.id] },
                    as: :radio_buttons %>

        <%= f.input :name, label: "Name of development project" %>
        <%= f.input :description, label: "Description of development project", as: :text %>

        <%= f.input :project_start_year,
                    label: "Indicate year of project's start of operation on the country where the incident of human rights violation happened" %>

        <div data-source-of-data-target="output">
          <span class="block text-sm font-bold text-gray-900 mb-5">
            Source of information on development project
          </span>

          <label for="about" class="block text-sm font-bold text-gray-700 mb-1">
            <%= t(:other_relevant_websites_or_links) %>
          </label>

          <%= f.input :website_sources,
                      label: false,
                      as: :text,
                      input_html: {
                        class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md"
                      } %>

        </div>

<div class="border-t border-gray-200 pt-6">
  <h2 class="text-lg font-semibold text-gray-800 mb-2">Parent Company Profile</h2>
  <%= f.input :parent_company_name, label: "Parent company name", as: :text %>
  <%= f.input :parent_company_description, label: "Parent company description", as: :text %>
  <%= f.input :parent_company_country_id, label: "Parent company country", collection: Country.all.map { |country| [country.name, country.id] } %>
  <%= f.input :parent_company_data_sources, label: "Source of information for parent commpany", as: :text %>
</div>

<div class="border-t border-gray-200 pt-6">
  <h2 class="text-lg font-semibold text-gray-800 mb-2">Funding Source</h2>
  <%= f.input :funding_source_description, label: "Funding source description", as: :text %>
  <%= f.input :funding_source_data_sources, label: "Source of information for funding", as: :text %>
</div>
        <div class="border-t border-gray-200 pt-6">
          <%= f.submit "Save Development Project", class: "w-full sm:w-auto h-12 px-6 text-white transition-colors duration-150 bg-green-700 rounded-lg focus:shadow-outline hover:bg-green-800" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>