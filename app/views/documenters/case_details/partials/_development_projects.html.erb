<div class="flex w-full mx-auto mt-4 justify-between">
  <h2 class="font-bold text-l text-gray-900 mt-4">Related Development Projects</h2>
</div>
<% @development_projects.each do |development_project| %>
  <div class="grid grid-cols-1 md:grid-cols-12">
    <div class="col-span-3 ml-4 mt-2">
      <p class="block mb-2 text-sm font-medium text-gray-900"> Project Name </p>
    </div>
    <div class="col-span-1">
      <%= development_project.name %>
    </div>
    <div class="col-span-7 mt-2">
      <p class="text-gray-500"></p>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-12">
    <div class="col-span-3 ml-4 mt-2">
      <p class="block mb-2 text-sm font-medium text-gray-900"> Description </p>
    </div>
    <div class="col-span-1">
      <%= development_project.description %>
    </div>
    <div class="col-span-7 mt-2">
      <p class="text-gray-500"></p>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-12">
    <div class="col-span-3 ml-4 mt-2">
      <p class="block mb-2 text-sm font-medium text-gray-900"> Year Started </p>
    </div>
    <div class="col-span-1">
      <%= development_project.project_start_year %>
    </div>
    <div class="col-span-7 mt-2">
      <p class="text-gray-500"></p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-12">
    <div class="col-span-3 ml-4 mt-2">
      <p class="block mb-2 text-sm font-medium text-gray-900"> Year Started </p>
    </div>
    <div class="col-span-1">
      <%= development_project.project_start_year %>
    </div>
    <div class="col-span-7 mt-2">
      <p class="text-gray-500"></p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-12">
    <div class="col-span-3 ml-4 mt-2">
      <p class="block mb-2 font-bold text-normal text-gray-900"> Parent Company Profile </p>
    </div>
  </div>
  <div class="flex w-full mx-auto justify-between">
  <h2 class="font-bold text-l text-gray-900 mt-4">Related Development Projects</h2>
</div>
<% end %>
