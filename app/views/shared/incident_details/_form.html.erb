<div class="md:col-span-6 px-5">
      <h2 class="font-bold text-xl text-gray-900"><%= t(:place_and_date_of_incident) %></h2>
      <div class="md:mt-0 md:col-span-2">
            <div class="py-5 sm:p-6">
              <div class="grid grid-cols-4 gap-6">
                <div class="col-span-2 sm:col-span-2">
                 <%= f.input :country_id, label: "#{t(:country_of_incident)}", collection: Country.all.map { |country| [country.name, country.id] } %>
                </div>
              </div>
              <div class="col-span-6 sm:col-span-3">
                <%= f.input :subnational_location, label: "#{t(:subnational_location)}", as: :text, hint: "Specify what state, department, county, province, city, municipality, town, village, community, etc.)" %>
              </div>
              <fieldset>
                <div>
                  <legend class="text-base font-medium text-gray-700 pt-4"><%= t(:is_this_an_ongoing_case) %></legend>
                </div>
                <div class="mt-4 space-y-4">
                 <%= f.input :ongoing_case, label: '', collection: ["#{t(:no_option)}", "#{t(:yes_option)}"], checked: "#{t(:no_option)}", input_html: { data: { incident_form_target: "input", action: "click->incident-form#toggle" } }, as: :radio_buttons  %>
                  </div>
                </div>
              </fieldset>

                <label class="block text-sm font-bold text-gray-700 pb-2"><%= t(:start_date_of_incident) %></label>
                  <div class="grid grid-cols-3 gap-4">
                    <%= f.input :incident_start_month, label: false, collection: Date::MONTHNAMES  %>
                    <%= f.input :incident_start_day, label: false, collection: 1..31 %>
                    <%= f.input :incident_start_year, label: false, collection: (Date.current - 10.year).year..(Time.zone.now.year) %>
                  </div>

              <div data-incident-form-target="output">
                <label class="block text-sm font-bold text-gray-700 pb-2"><%= t(:end_date_of_incident) %></label>
                 <div class="grid grid-cols-3 gap-4">
                    <%= f.input :incident_end_month, label: false, collection: Date::MONTHNAMES  %>
                    <%= f.input :incident_end_day, label: false, collection: 1..31 %>
                  <%= f.input :incident_end_year, label: false, collection: (Date.current - 10.year).year..(Time.zone.now.year) %>
                  </div>

              <div class="col-span-6">
    <form class="max-w-[10rem] mx-auto">
        <label for="incident_time" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Select time:</label>
        <div class="relative w-fit">
            <div class="absolute inset-y-0 end-0 top-0 flex items-center pe-3.5 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M2 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10S2 17.523 2 12Zm11-4a1 1 0 1 0-2 0v4a1 1 0 0 0 .293.707l3 3a1 1 0 0 0 1.414-1.414L13 11.586V8Z" clip-rule="evenodd"/>
                </svg>
            </div>
            <input type="time" id="incident_time" name="case_details_incident[incident_time]" class="bg-gray-50 border leading-none border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 w-fit p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" min="09:00" max="18:00" value="00:00" />
        </div>
    </form>
</div>
              </div>

      <div class="px-4 py-3 text-right sm:px-6">
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
          <%= t(:continue) %>
        </button>
      </div>
