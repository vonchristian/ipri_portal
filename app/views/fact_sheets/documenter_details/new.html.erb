
<%= form_for @documenter, url: :fact_sheets_documenter_details do |f| %>
  <%= f.hidden_field :reference_number, value: SecureRandom.uuid %>
  <div class="bg-gray-50 mb-10">
    <div class="max-w-7xl mx-auto lg:px-0">
      <div class="md:grid md:grid-cols-3">
        <div class="md:col-span-1 bg-green-500">
          <h1 class="pt-10 pl-4 font-bold py-5"> Step 1/7:</h1>
          <h3 class="pl-2 font-bold pl-8"><i class="fa fa-circle fa-2x"></i> <span class="align-middle pl-4 pb-2">Documenter Details</span></h3>
          <h3 class="pl-2 font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Data Sharing Agreement</span></h3>
          <h3 class="pl-2 font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Incident Details</span></h3>
          <h3 class="pl-2 font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Victims</span></h3>
          <h3 class="pl-2 font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Human Rights Violoations</span></h3>
          <h3 class="pl-2 font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Actions Taken</span></h3>
          <h3 class="pl-2 font-bold pl-8 pt-4"><i class="fa fa-circle-o fa-2x"></i> <span class="align-middle pl-4 pb-2">Related Development Projects</span></h3>
        </div>
        <div class="md:mt-0 md:col-span-2 bg-white py-10 px-5">
          <h2 class="font-bold text-xl text-gray-900">Details of Documenter</h2>
          <div class="border-t border-gray-200 mt-4"></div>
          <div>
            <div class="px-4 py-5  space-y-4 sm:p-6">
              <div class="grid grid-cols-4 gap-6">
                <div class="col-span-2 sm:col-span-2">
                  <label for="first-name" class="block text-sm font-medium text-gray-700">First name</label>
                  <%= f.text_field :first_name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <div class="col-span-2 sm:col-span-2">
                  <label for="last-name" class="block text-sm font-medium text-gray-700">Last name</label>
                  <%= f.text_field :last_name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>
              </div>

              <label for="first-name" class="block text-sm font-medium text-gray-700">Organization/Affiliation</label>
              <%= f.text_field :documenter_organization, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <p class="text-sm text-gray-500">
                Write the full name of your Organization / Affiliation
              </p>
              <div>
                <label for="submission-date" class="block text-sm font-medium text-gray-700 pb-2">Date of Submission</label>
                <%= f.select :submission_date_month, Date::MONTHNAMES, default: Date.current %>
                <%= f.select :submission_date_day, 1..31 %>
                <%= f.select :submission_date_year, (Date.current - 10.year).year..(Time.zone.now.year) %>
              </div>
              <fieldset>
                <legend class="text-base font-medium text-gray-900">Notification Settings</legend>
                <div class="mt-4 space-y-4">
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <%= f.check_box :check_email, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="comments" class="font-medium text-gray-700">Email</label>
                      <p class="text-gray-500">Get notified through your email.</p>
                    </div>
                  </div>
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <%= f.check_box :check_phone_number, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="candidates" class="font-medium text-gray-700">Phone Number</label>
                      <p class="text-gray-500">Get notified through your phone number.</p>
                    </div>
                  </div>
                </div>
              </fieldset>


              <div class="col-span-6 sm:col-span-3">
                <label for="first-name" class="block text-sm font-medium text-gray-700">Email</label>
                <%= f.text_field :email, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>



              <div class="col-span-6 sm:col-span-3">
                <label for="first-name" class="block text-sm font-medium text-gray-700">Phone Number</label>
                <%= f.text_field :phone_number, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>


              <fieldset>
                <div>
                  <legend class="text-base font-medium text-gray-700 pt-4">Is the documenter submitting this case factsheet as primary data?</legend>
                  <p class="text-gray-500"> Primary data refers to data that are gathered directly from the victim/s, family/ies of the victim/s, member/s of the Indigenous Peoples that were affected.</p>
                </div>
                <div class="mt-4 space-y-4">
                  <div class="flex items-center">
                    <%= f.radio_button :primary_data, true, class:"focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300"  %>
                    <label for="primary-data" class="ml-3 block text-sm font-medium text-gray-700">
                      Yes
                    </label>
                  </div>
                  <div class="flex items-center">
                    <%= f.radio_button :primary_data, false, class:"focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300"  %>

                    <label for="primary-data" class="ml-3 block text-sm font-medium text-gray-700">
                      No
                    </label>
                  </div>
                </div>
              </fieldset>

              <div>
                <label for="about" class="block text-sm font-medium text-gray-700">
                  Other relevant websites/links
                </label>
                <div class="mt-1">
                  <textarea id="about" name="about" rows="3" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md"></textarea>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">
                  Upload Documents
                </label>
                <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md pb-5">
                  <div class="space-y-1 text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                      <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    <div class="flex text-sm text-gray-600">
                      <label for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                        <span>Upload a file</span>
                        <input id="file-upload" name="file-upload" type="file" class="sr-only">
                      </label>
                      <p class="pl-1">or drag and drop</p>
                    </div>
                    <p class="text-xs text-gray-500">
                      PNG, JPG, GIF up to 10MB
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <div class="px-4 py-3 bg-gray-100 text-right sm:px-6">
              <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Next
              </button>
            </div>
          </div>
        </div>
      </div>
<% end %>

